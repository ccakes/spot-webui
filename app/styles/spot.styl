@import 'nib'
@import 'jeet'
@import 'rupture'
@import 'axis'

// settings
font-face = "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

global-reset()

html, body
  font-family font-face

body
  color #eee
  font-weight 100
  //line-height 110%
  background-color black
  background-position center center fixed no-repeat
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  overflow hidden

h1, h2, h3, h4, h5
  font-weight 600
  //text-shadow 2px 2px 2px #000
  text-shadow 0 0 .2em #888

h1
  font-size 48pt

h2
  font-size 36pt

h3
  font-size 24pt

h4
  font-size 20pt

h5
  font-size 16pt

.thin
  font-weight 100

strong
  font-weight 400

a
  color #fff
  text-decoration none
  border-bottom 1px solid transparent
  transition .2s ease

a:hover
  border-bottom 1px solid #ddd
  cursor pointer

.cover
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background-image url(/default.jpg)
  background-size cover
  background-repeat no-repeat
  z-index -2

.cover:before
  content " "
  margin 0
  padding 0
  position fixed
  left 0
  top 0
  width calc(100%)
  height calc(100%)
  background-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAADAQMAAABs5if8AAAAA3NCSVQICAjb4U/gAAAABlBMVEUAAAD///+l2Z/dAAAAAnRSTlP/AOW3MEoAAAAJcEhZcwAACusAAArrAYKLDVoAAAAWdEVYdENyZWF0aW9uIFRpbWUAMjUvMDQvMTHvvlk6AAAAHHRFWHRTb2Z0d2FyZQBBZG9iZSBGaXJld29ya3MgQ1M1cbXjNgAAAA5JREFUCJljSGB4wPAAAAVmAiGdUf+vAAAAAElFTkSuQmCC")
  transition all .4s linear
  opacity .3
  z-index -1
  background #000
  opacity .8

#container
  max-height calc(100%) !important
  //border 2px red solid
  
.upcoming
  margin-top 2rem
  
img.album
  margin 2rem 0 2rem 0
  max-width 200px
  box-shadow 0 0 15px #aaa

.top
  margin 2rem 2rem 0 2rem

  .right
    text-align right

    #tools ul
      margin 1rem 0 0 1rem

      li
        font-size large
        margin-bottom 1rem

        a
          border-bottom 1px solid transparent

        i
          padding-left .5rem
        
        #events
          font-size small

.bottom
  margin 0 2rem 0 2rem
  
  .info
    margin-top 5rem

    p
      margin-bottom .5rem
  
  .search
    margin-top 5rem
    
    .results
      overflow auto
    
  .playlist
    margin-top 5rem


/* Track <ul> - search & playlist */
.results li
  //line-height 120%
  margin-left 1rem
  margin-bottom .5rem

.results li .track
  font-weight 200

.results li .artist
  color #ddd
  font-size 95%
  font-weight 150

.results .album
  color #ddd
  font-size 80%

#playlist
  margin-top 1rem

#playlist li a
  border-bottom 1px solid transparent

#playlist li a i
  opacity .2
  transition .2s ease

#playlist li a i:hover
  opacity 1

input#search
  font-size xx-large
  color #fff
  background none
  border none
  border-bottom 1px #ccc solid
  font-family font-face
  font-weight 100
  margin-bottom 1rem

input#search:focus
  outline none

.progressjs-theme-blue .progressjs-inner
  background-color #fff
  height 3px
  opacity .8
